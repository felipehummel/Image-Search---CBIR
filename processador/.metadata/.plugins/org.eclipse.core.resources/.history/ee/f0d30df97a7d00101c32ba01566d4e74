//	    for (int i = 0; i < a.length; i++) {
//	        distance = distance + Math.pow((a[i] - b[i]), 2);
//	    }
//	    return (float) Math.sqrt(distance);
//	}
	
	@Override
	public final float calculateSimilarity(int[] a, int[] b) {
		double distance = 0;
	    for (int i = 0; i < a.length; i++) 
	        distance = distance + ((a[i] - b[i]) << 1);
	    return (float)Math.sqrt(distance);
	}
}
